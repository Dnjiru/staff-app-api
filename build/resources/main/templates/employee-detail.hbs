{{#partial "content"}}

    <p>Description: {{ employee.description }}</p>
    <p>Department of this Employee: {{ department.name }}</p>
    <h5>
        Employee status:
        {{#if employee.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>
    <p>
        <a href="/employees/{{employee.id}}/edit">Edit this Employee</a><br>
        <a href="/departments/{{employee.departmentId}}/employees/{{employee.id}}/delete">DELETE this Employee</a>
    </p>

{{/partial}}

{{> layout.hbs}}
