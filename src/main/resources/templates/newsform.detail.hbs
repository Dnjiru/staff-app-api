{{#partial "content"}}

    <p>Description: {{ news.description }}</p>
    <p>Department of this News: {{ department.name }}</p>
    <h5>
        News status:
        {{#if news.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>
    <p>
        <a href="/newss/{{news.id}}/edit">Edit this News</a><br>
        <a href="/departments/{{news.departmentId}}/newss/{{news.id}}/delete">DELETE this News</a>
    </p>

{{/partial}}

{{> layout.hbs}}
