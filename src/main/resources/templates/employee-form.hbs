{{#partial "content"}}
    {{#if editTask}}
        <h1>Edit this Employee!</h1>
        <form action="/employees/{{employee.id}}" method="post">
            <br>
            <label for="description">Edit this Employee's description</label>
            <input id="description" name="description" type="text" value="{{employee.description}}">
            <br>
            <label for="departmentId">Update this Employee's Department:</label>
            <select id="departmentId" name="departmentId">
                {{#each departments}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right Department?<a href="/departments/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Add!</button>
        </form>
    {{else}}
        <h2>Add a new Employee!</h2>
        <form action="/employees" method="post">
            {{#if departments}}
                <label for="description">Employee Description</label>
                <input id="description" name="description" type="text">
                <label for="departmentId">Categorize this Employee as:</label>
                <select id="departmentId" name="departmentId">
                    {{#each departments}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right Department?<a href="/departments/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a Department before you add a Employee. <a href="/departments/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-secondary">Add!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}
